{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-native",
    "noEmit": false,
    "paths": {
      "@2600hz/sds-react-native-components": ["./src/index"]
    }
  },
  "exclude": [
    "__tests__/**/*-test.ts",
    "tests",
    "dist",
    "node_modules",
    "build",
    "lib",
    "coverage",
    ".eslintrc.js",
    ".svgrrc.js",
    "babel.config.js",
    "commitlint.config.js",
    "jest.config.js",
    "lint-staged.config.js",
    "metro.config.js",
    "webpack.config.js"
  ],
  "extends": "@2600hz/js-utilities/tsconfig.base",
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "include": ["**/*.js", "**/*.ts", "./*", "./**/*", "./src"],
  "types": [
    "react",
    "react-dom",
    "react-native",
    "react-test-renderer",
    "jest",
    "styled-components-react-native"
  ]
}
