{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6", "dom", "es2016", "es2017", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["app/*"],
      "@containers/*": ["src/containers/*"],
      "@components/*": ["src/components/*"],
      "@modules/*": ["src/modules/*"],
      "@styles/*": ["src/styles/*"],
      "tests": ["tests/*"]
    },
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["**/*.js", "**/*.ts", "./*", "./**/*", "./src", ".eslintrc.js"],
  "exclude": [
    "__tests__/**/*-test.ts",
    "babel.config.js",
    "build",
    "coverage",
    "jest.config.js",
    "metro.config.js",
    "node_modules"
  ],
  "extends": "expo/tsconfig.base",
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "types": ["react", "react-dom", "react-native", "react-test-renderer", "jest"]
}
